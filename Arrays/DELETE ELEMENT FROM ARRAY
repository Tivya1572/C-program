#include <stdio.h>
int findelementdelete(int arr[],int pos,int size)
{
    int i,j;
    for(i=0;i<pos;i++)
    {
    	printf("%d",arr[i]);
	}
    
    for(i=pos;i<=size;i++)
    {
           arr[i]=arr[i+1];
           size=size-1;
     printf("%d",arr[i]); 
	}

}
int main()
{
    int arr[7],pos,i,size;
    printf("enter size:");
    scanf("%d",&size);
    for(i=0;i<size;i++)
    {
        scanf("%d",&arr[i]);
    }

    printf("enter the position to delete:");
    scanf("%d",&pos);
    findelementdelete(arr,pos,size);
}
